<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/customization_settings_title" >

    <!-- Status bar -->
    <PreferenceCategory
        android:key="statusbar"
        android:title="@string/statusbar_section_header" >

        <PreferenceScreen
            android:key="systemui_tuner_statusbar"
            android:title="@string/systemui_tuner_statusbar_title"
            android:summary="@string/systemui_tuner_statusbar_summary" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.TunerActivity" />
        </PreferenceScreen>

		<PreferenceScreen
		    android:key="status_bar_battery"
		    android:title="@string/statusbar_battery_title"
		    android:summary="@string/statusbar_battery_summary"
		    android:fragment="com.android.settings.velvet.StatusbarBatterySettings" />

    	<com.android.settings.preference.SecureSettingSwitchPreference
            android:key="qs_show_brightness"
            android:title="@string/show_brightness_title"
            android:summary="@string/show_brightness_summary"
            android:defaultValue="true" />

        <com.android.settings.preference.SystemSettingSwitchPreference
            android:key="status_bar_brightness_control"
            android:title="@string/status_bar_toggle_brightness"
            android:summary="@string/status_bar_toggle_brightness_summary" />

   	    <com.android.settings.preference.SystemSettingSwitchPreference
            android:key="double_tap_sleep_gesture"
            android:title="@string/double_tap_to_sleep_title"
            android:summary="@string/double_tap_to_sleep_summary"
            android:defaultValue="false" />

        <PreferenceScreen
            android:key="network_traffic_state"
            android:fragment="com.android.settings.NetworkTraffic"
            android:summary="@string/network_traffic_summary"
            android:title="@string/network_traffic_title" />
    </PreferenceCategory>

    <!-- Navigation bar -->
    <PreferenceCategory
        android:key="navigationbar"
        android:title="@string/navigationbar_section_header" >

        <PreferenceScreen
            android:key="systemui_tuner_navbar"
            android:title="@string/systemui_tuner_navbar_title"
            android:summary="@string/systemui_tuner_navbar_summary" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.NavBarTunerActivity" />
        </PreferenceScreen>

   	<com.android.settings.preference.SystemSettingSwitchPreference
            android:key="double_tap_sleep_navbar"
            android:title="@string/double_tap_sleep_nav_bar_title"
            android:summary="@string/double_tap_sleep_nav_bar_summary"
            android:defaultValue="false" />

    <com.android.settings.preference.SecureSettingSwitchPreference
        android:key="overview_nav_bar_gesture"
        android:title="@string/overview_nav_bar_gesture"
        android:summary="@string/overview_nav_bar_gesture_desc" />
    </PreferenceCategory>

    <!-- Miscellaneous -->
    <PreferenceCategory
        android:key="misc"
        android:title="@string/miscellaneous_section_header" >

		<PreferenceScreen
	        android:key="power_notification_controls"
	        android:title="@string/tuner_full_importance_settings" >
			<intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.PowerNotificationControlsActivity" />
		</PreferenceScreen>

		<PreferenceScreen
		    android:key="color_transform"
		    android:title="@string/color_and_appearance" >
			<intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.ColorAndAppearanceActivity" />
		</PreferenceScreen>

    </PreferenceCategory>

</PreferenceScreen>
